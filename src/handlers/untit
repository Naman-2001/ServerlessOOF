curl --location --request POST 'https://serverless-sample.us.auth0.com/oauth/token' \
--header 'Content-Type: application/x-www-form-urlencoded' \
--data-urlencode 'client_id=O7zozwRWQXQO2IQ31Y0k8OELmQPaqSiA' \
--data-urlencode 'username=naman.aggarwal2001@gmail.com' \
--data-urlencode 'password=Naman075' \
